{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 50px auto; text-align: left;">
        <h1>Bienvenue ADMIN {{ user.prenom }} {{ user.nom }}</h1>

        <p>Choisissez une section à gérer :</p>

        <ul style="list-style-type: none; padding-left: 0;">
            <li><a href="{{ path('app_produit_index') }}" class="btn btn-primary mb-2">📦 Gérer les Produits</a></li>
            <li><a href="{{ path('app_user_index') }}" class="btn btn-secondary mb-2">👥 Gérer les Utilisateurs</a></li>
            <li><a href="{{ path('app_notification_index') }}" class="btn btn-secondary mb-2">🔔 Voir les Notifications</a></li>
        </ul>

        <div style="margin-top: 30px;">
            <a href="{{ path('app_home') }}" class="btn btn-outline-dark">🏠 Accueil</a>
            <a href="{{ path('app_logout') }}" class="btn btn-danger" style="margin-left: 10px;">Déconnexion</a>
        </div>
    </div>
{% endblock %}